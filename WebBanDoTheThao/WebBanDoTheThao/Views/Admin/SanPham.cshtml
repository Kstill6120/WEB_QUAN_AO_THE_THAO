@model List<WebBanDoTheThao.Models.SANPHAM>
@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="row">
    <div class="col-md-7">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="mb-0">Danh sách sản phẩm</h2>
            <a href="@Url.Action("ThemSanPham", "Admin")" class="btn btn-success">
                <i class="fa fa-plus me-1"></i> Thêm sản phẩm
            </a>

        </div>

        <form class="row g-2 align-items-end mb-3" method="get" action="@Url.Action("SanPham", "Admin")" id="filterForm">
            <div class="col-md-3">
                <label class="form-label">Tìm theo tên</label>
                <input type="text" class="form-control" name="keyword" value="@ViewBag.Keyword" placeholder="Nhập tên..." />
            </div>

            <div class="col-md-2">
                <label class="form-label">Thương hiệu</label>
                @Html.DropDownList("thuongHieu", new SelectList(ViewBag.ListThuongHieu, ViewBag.SelectedBrand), "-- Tất cả --", new { @class = "form-select" })
            </div>

            <div class="col-md-2">
                <label class="form-label">Môn thể thao</label>
                @Html.DropDownList("tenMon", new SelectList(ViewBag.ListMaMon, ViewBag.SelectedMon), "-- Tất cả --", new { @class = "form-select" })
            </div>

            <div class="col-md-3">
                <div class="form-check form-switch border rounded p-2 bg-light">
                    <input class="form-check-input ms-0 me-2" type="checkbox" id="showAllToggle" name="showAll" value="true"
                           @(ViewBag.ShowAll == true ? "checked" : "")
                           onchange="document.getElementById('filterForm').submit()">
                    <label class="form-check-label fw-bold" for="showAllToggle">Hiện cả SP ngừng bán</label>
                </div>
            </div>

            <div class="col-md-2 d-grid">
                <button type="submit" class="btn btn-dark"><i class="fa fa-filter me-1"></i> Lọc</button>
            </div>
        </form>



        <table class="table table-bordered table-hover text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>

                    <th>Mã SP</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                    <th>Ảnh</th>
                    <th>Thao tác</th>

                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    int stt = (ViewBag.Page - 1) * 10 + 1;
                    foreach (var sp in Model)
                    {
                        <tr style="cursor:pointer;"
                            onclick="showDetail('@sp.MASP')">
                            <td>@stt</td>
                            <td>@sp.MASP</td>
                            <td class="text-start">@sp.TENSP</td>

                            <td class="text-end">@String.Format("{0:N0} đ", sp.GIA)</td>
                            <td>
                                <img src="~/Assets/Clothes_Images/@sp.AVATAR" width="60" height="60" class="rounded" style="object-fit:cover;" />
                            </td>
                            <td>
                                <button class="btn btn-sm btn-primary" onclick="editProduct('@sp.MASP', event)">
                                    <i class="fa fa-pen"></i>
                                </button>

                                @if (sp.TRANGTHAI == "Ngừng bán")
                                {
                                    <button class="btn btn-sm btn-secondary" disabled title="Đã ngừng bán">
                                        <i class="fa fa-ban"></i>
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-danger" onclick="stopSelling(@sp.ID, '@sp.TENSP', event)" title="Ngừng bán">
                                        <i class="fa fa-times-circle"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                        stt++;
                    }
                }
                else
                {
                    <tr><td colspan="6" class="text-muted text-center">Không có sản phẩm nào</td></tr>
                }

            </tbody>
        </table>

        @Html.Partial("_Pagination")

    </div>


    <div class="col-md-5">
        <div id="detailPanel" class="card shadow-sm p-3">
            <h4 class="mb-3">Thông tin sản phẩm</h4>
            <div id="detailContent">
                <p>Chọn một sản phẩm để xem chi tiết...</p>
            </div>
        </div>

    </div>
</div>

@section scripts {
    <script>
        function showDetail(maSP) {
            fetch(`/Admin/SanPhamChiTiet?MaSP=${maSP}`)
                .then(res => {
                    if (!res.ok) throw new Error("Không tải được dữ liệu sản phẩm");
 return res.text();
                })
                .then(html => {
                    document.getElementById("detailContent").innerHTML = html;
                })
                .catch(err => {
                    console.error(err);

                 alert("❌ Lỗi khi tải chi tiết sản phẩm");
                });
 }
          function editProduct(MaSP) {
            window.location.href = "@Url.Action("SuaSanPham", "Admin")" + "?MaSP=" + MaSP;
 }

        function stopSelling(id, tenSP, event) {
                event.stopPropagation(); // Ngăn click vào dòng tr
                if (!confirm(`Bạn có chắc muốn NGỪNG BÁN sản phẩm "${tenSP}" không?\n(Yêu cầu: Số lượng tồn kho phải bằng 0)`)) {
                    return;
                }

                // Gọi AJAX
                fetch('@Url.Action("NgungBan", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ id: id })
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        alert("Thành công: " + data.message);
                        location.reload(); // Tải lại trang để cập nhật trạng thái
                    } else {
                        alert("Thất bại: " + data.message);
                    }
                })
                .catch(err => {
                    console.error(err);
                    alert("Lỗi kết nối server.");
                });
            }
    </script>
}