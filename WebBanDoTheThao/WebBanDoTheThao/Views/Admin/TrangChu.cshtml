@{
    ViewBag.Title = "TrangChu";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row g-3 mb-3">
        <div class="col-12 col-md-3">
            <div class="stat-card text-center">
                <div class="text-muted-soft">Doanh thu</div>
                <div class="d-flex align-items-center justify-content-center my-2">
                    <i class="fa-solid fa-dollar-sign text-success stat-icon me-2"></i>
                    <div>
                        <h4 class="mb-0">@ViewBag.Revenue.ToString("N0") đ</h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-3">
            <div class="stat-card text-center">
                <div class="text-muted-soft">Sản phẩm</div>
                <div class="my-2">
                    <i class="fa-solid fa-cart-shopping text-primary stat-icon"></i>
                    <h4 class="mt-1">@ViewBag.TongSP</h4>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-3">
            <div class="stat-card text-center">
                <div class="text-muted-soft">Số sản phẩm bán được trong ngày</div>
                <div class="my-2">
                    <i class="fa-solid fa-user-group text-warning stat-icon"></i>
                    <h4 class="mt-1">@ViewBag.CountSPonSell</h4>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-3">
            <div class="stat-card text-center">
                <div class="text-muted-soft">Người dùng</div>
                <div class="my-2">
                    <i class="fa-solid fa-user-tie text-danger stat-icon"></i>
                    <h4 class="mt-1">@ViewBag.SoLuongND</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mt-4">
        <!-- Biểu đồ Line -->
        <div class="col-lg-8">
            <div class="panel" style="height: 500px;">
                <h6 class="mb-3">Giá trung bình theo Thương hiệu</h6>
                <canvas id="priceChart"></canvas>
            </div>
        </div>

        <!-- Biểu đồ Pie -->
        <div class="col-lg-4">
            <div class="panel" style="height: 500px;">
                <h6 class="mb-3">Sản phẩm theo Thương hiệu</h6>
                <canvas id="pieChart"></canvas>
            </div>
        </div>
    </div>


    <!-- Recent products or quick actions -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="panel d-flex align-items-center justify-content-between">
                <div>
                    <h6 class="mb-1">Quick Actions</h6>
                    <small class="text-muted-soft">Add products, manage inventory, or view reports</small>
                </div>
                <div>
                    <a href="@Url.Action("ThemSanPham","Admin")" class="btn btn-outline-primary me-2"><i class="fa-solid fa-plus"></i> Add Product</a>
                    <a href="@Url.Action("ThongKe","Admin")" class="btn btn-outline-secondary"><i class="fa-solid fa-chart-simple"></i> Reports</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Layout của bạn đã load Chart.js

        // --- 1. BIỂU ĐỒ PIE (Mới) ---
        (function() {
            try {
                var brandLabels = @Html.Raw(ViewBag.BrandLabels);
                var brandData = @Html.Raw(ViewBag.BrandData);

                var pieCtx = document.getElementById('pieChart').getContext('2d');
                new Chart(pieCtx, {
                    type: 'pie', // Loại biểu đồ
                    data: {
                        labels: brandLabels, // Tên thương hiệu
                        datasets: [{
                            data: brandData, // Số lượng sản phẩm
                            backgroundColor: [
                                '#0d6efd', '#6f42c1', '#d63384',
                                '#dc3545', '#fd7e14', '#ffc107',
                                '#198754', '#20c997', '#0dcaf0'
                            ],
                            hoverOffset: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'top',
                            },
                            tooltip: {
                                callbacks: {
                                    // Hiển thị cả %
                                    label: function(context) {
                                        let label = context.label || '';
                                        let value = context.raw;

                                        // Tính tổng
                                        let total = context.chart.data.datasets[0].data.reduce((a, b) => a + b, 0);
                                        let percentage = (value / total * 100).toFixed(1) + '%';

                                        return ` ${label}: ${value} (${percentage})`;
                                    }
                                }
                            }
                        }
                    }
                });
            } catch (e) {
                console.error("Lỗi vẽ biểu đồ Pie:", e);
            }
        })();

        // --- 2. BIỂU ĐỒ LINE (Cũ - Demo) ---
        (function() {
    try {
        var priceLabels = @Html.Raw(ViewBag.PriceLabels);
        var priceData = @Html.Raw(ViewBag.PriceData);

        var ctx = document.getElementById('priceChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: priceLabels,
                datasets: [{
                    label: 'Giá trung bình (VNĐ)',
                    data: priceData,
                    borderColor: '#0dcaf0',
                    backgroundColor: 'rgba(13, 202, 240, 0.2)',
                    tension: 0.3,
                    fill: true,
                    pointBackgroundColor: '#0dcaf0'
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'Giá trung bình (VNĐ)' }
                    },
                    x: {
                        title: { display: true, text: 'Thương hiệu' }
                    }
                },
                plugins: {
                    legend: {
                        position: 'top'
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.parsed.y.toLocaleString() + ' VNĐ';
                            }
                        }
                    }
                }
            }
        });
    } catch (e) {
        console.error("Lỗi vẽ biểu đồ Line giá:", e);
    }
})();
    </script>
}