<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Admin</title>

    <!-- Bootstrap + FontAwesome (Bạn đã cho) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <link rel="stylesheet" href="~/Assets/CSS/Admin.css"
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav class="sidebar d-flex flex-column">
            <a class="brand">Admin</a>
            <ul class="nav flex-column px-2">
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" href="@Url.Action("TrangChu","Admin")">
                        <i class="fa-solid fa-house me-2"></i> Trang chủ
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" href="@Url.Action("SanPham","Admin")">
                        <i class="fa-solid fa-shirt me-2"></i> Sản phẩm
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" href="@Url.Action("QuanLyLoaiSP","Admin")">
                        <i class="fa-solid fa-layer-group me-2"></i> Loại Sản Phẩm
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" href="@Url.Action("QuanLyMonTT","Admin")">
                        <i class="fa-solid fa-person-running me-2"></i> Môn Thể Thao
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" href="@Url.Action("ThuongHieu","Admin")">
                        <i class="fa-solid fa-tags me-2"></i> Thương hiệu
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" href="@Url.Action("NguoiDung","Admin")">
                        <i class="fa-solid fa-users me-2"></i> Người dùng
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" href="@Url.Action("DonHang","Admin")">
                        <i class="fa-solid fa-box me-2"></i> Đơn hàng
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" href="@Url.Action("ThongKe","Admin")">
                        <i class="fa-solid fa-chart-line me-2"></i> Thống kê
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" href="@Url.Action("Kho","Admin")">
                        <i class="fa-solid fa-warehouse me-2"></i> Quản lý Kho
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" href="@Url.Action("Settings","Admin")">
                        <i class="fa-solid fa-gear me-2"></i> Cài đặt
                    </a>
                </li>
            </ul>

            <div class="mt-auto p-3 text-center">
                <small class="text-muted-soft">© @DateTime.Now.Year - Your Company</small>
            </div>
        </nav>

        <!-- Main content -->
        <div class="content w-100">
            <header class="topbar">
                <div class="d-flex align-items-center">
                    <button id="toggleSidebar" class="btn btn-sm btn-outline-secondary d-lg-none me-2" title="Toggle sidebar"><i class="fa-solid fa-bars"></i></button>
                    <h3 class="mb-0">@ViewBag.Title</h3>
                </div>

                <div class="d-flex align-items-center gap-3">
                    <div class="me-3 text-muted-soft d-none d-md-block">Welcome, <strong>Admin</strong></div>
                    <div class="dropdown">
                        <a class="btn btn-sm btn-outline-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-user"></i> Admin
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="@Url.Action("Profile","Admin")">Profile</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Settings","Admin")">Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("Logout","Login")">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </header>

            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Apply stored theme or default to light
        (function () {
            const defaultTheme = 'light';
            function applyTheme(t) {
                document.body.classList.remove('theme-light', 'theme-dark', 'theme-brand');
                document.body.classList.add('theme-' + t);
                const btns = document.querySelectorAll('[data-theme-btn]');
                btns.forEach(b => b.classList.remove('active'));
                const active = document.querySelector('[data-theme-btn="' + t + '"]');
                if (active) active.classList.add('active');
            }
            function loadTheme() {
                const t = localStorage.getItem('admin_theme') || defaultTheme;
                applyTheme(t);
            }
            window.setTheme = function (t) {
                localStorage.setItem('admin_theme', t);
                applyTheme(t);
            }
            window.addEventListener('DOMContentLoaded', loadTheme);

            // sidebar toggle on small screens
            document.getElementById('toggleSidebar').addEventListener('click', function () {
                document.querySelector('.sidebar').classList.toggle('show');
            });
        })();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>