<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - BigSport</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>


    <link rel="stylesheet" href="@Url.Content("~/Assets/CSS/Carousel.css?v=1.1")" />
    <link rel="stylesheet" href="@Url.Content("~/Assets/CSS/Nav.css?v=1.1")" />
    <link rel="stylesheet" href="@Url.Content("~/Assets/CSS/Footer.css?v=1.1")" />
    <link rel="stylesheet" href="@Url.Content("~/Assets/CSS/ChatBot.css?v=1.1")" />
    <link rel="stylesheet" href="@Url.Content("~/Assets/CSS/Content.css?v=1.1")" />
    <style>
        body {
            padding-top: 70px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
                <img src="~/Assets/images/logo.jpg" alt="BigSport" height="50" width="280" class="me-2">
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="mainNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ShowQABD", "Home")">Quần áo thể thao</a>
                    </li>
                </ul>
            </div>

            <div class="d-flex align-items-center">
                <form action="@Url.Action("Search", "Home")" method="get" class="d-flex me-3 position-relative">
                    <input class="form-control form-control-sm pe-5 rounded-pill"
                           type="search"
                           name="query"
                           placeholder="Tìm sản phẩm..."
                           aria-label="Search"
                           value="@Request.QueryString["query"]"
                           required>
                    <button class="btn btn-sm position-absolute top-50 end-0 translate-middle-y me-1 border-0 bg-transparent" type="submit">
                        <i class="fa fa-search text-muted"></i>
                    </button>
                </form>
                <div class="nav-item dropdown-user position-relative">
                    <a href="#" class="nav-link"><i class="fa fa-user"></i></a>
                    <div class="dropdown-menu-user">
                        @if (Session["UserEmail"] == null)
                        {
                            <a href="@Url.Action("Login", "Login")">Đăng nhập</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Profile", "Profile")">Tài khoản (@Session["UserEmail"])</a>
                            <a href="@Url.Action("Logout", "Login")">Đăng xuất</a>
                        }
                    </div>
                </div>
                <a href="@Url.Action("Favorites", "Home")" id="fav-link" class="position-relative">
                    <i class="fas fa-heart"></i>
                    <span class="badge bg-danger position-absolute top-0 start-100 translate-middle" id="fav-count">
                        @(Session["FavCount"] ?? 0)
                    </span>
                </a>

                <a href="@Url.Action("XemGH", "MuaSP")" class="nav-link position-relative">
                    <i class="fa fa-shopping-cart"></i>
                    <span id="cartCount" class="badge bg-primary position-absolute top-0 start-100 translate-middle p-1">
                        @Html.Action("GetCartCount", "MuaSP")
                    </span>
                </a>

            </div>
        </div>
    </nav>

    <div class="container-fluid">
        @RenderBody()
        <div class="floating-icon-wrapper">
            <div id="backToTop" class="floating-icon" style="background-color:red">
                <i class="fas fa-chevron-up"></i>
                <span class="tooltip">Lên đầu trang </span>
            </div>
            <a href="https://www.facebook.com/duylinhnguyen02122005/" target="_blank" class="floating-icon">
                <img src="~/Assets/images/Messenger.png" alt="Zalo" width="40" height="40" />
                <span class="tooltip">Nhắn cho Shop </span>
            </a>
            <a href="javascript:void(0)" class="floating-icon" onclick="toggleChat()">
                <img src="~/Assets/images/ChatBot.png" alt="chatbot" width="40" height="40" />
                <span class="tooltip">ChatBot rẻ tiền sẽ hỗ trợ bạn:))) </span>
            </a>
        </div>

    </div>
    <footer class="footer-custom text-dark pt-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <a href="#">
                        <img src="~/Assets/images/logo.png" alt="BigSport" height="40" class="mb-3">
                    </a>
                    <p><i class="fa fa-map-marker-alt me-2"></i>306 Lê Trọng Tấn, Phường Tây Thạnh, Quận Tân Phú, TP.HCM</p>
                    <p><i class="fa fa-phone me-2"></i>0703058058</p>
                    <p><i class="fa fa-envelope me-2"></i>bigsport.pro@gmail.com</p>
                    <p class="small">© Bản quyền thuộc về <a href="#">EGANY</a> | Cung cấp bởi <a href="#">Haravan</a></p>
                </div>

                <div class="col-md-4 mb-4">
                    <h6 class="fw-bold">CỔNG THÔNG TIN</h6>
                    <ul class="list-unstyled">
                        <li><a href="#">Chính sách vận chuyển giao nhận hàng</a></li>
                        <li><a href="#">Chính sách đổi trả sản phẩm</a></li>
                        <li><a href="#">Chính sách kiểm hàng</a></li>
                        <li><a href="#">Chính sách thanh toán</a></li>
                        <li><a href="#">Chính sách bảo mật</a></li>
                        <li><a href="#">Hướng dẫn mua hàng</a></li>
                    </ul>
                </div>

                <div class="col-md-4 mb-4">
                    <h6 class="fw-bold">ĐĂNG KÝ NHẬN TIN</h6>
                    <form class="w-70">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Nhập địa chỉ email">
                            <button class="btn btn-dark" type="submit">Đăng ký</button>
                        </div>
                    </form>
                    <div class="d-flex gap-3 social-icons">
                        <a href="#"><i class="fab fa-facebook fa-2x text-primary"></i></a>
                        <a href="#"><i class="fab fa-youtube fa-2x text-danger"></i></a>
                        <a href="#"><i class="fab fa-tiktok fa-2x text-dark"></i></a>
                    </div>
                </div>
            </div>

            <div class="row mt-4 align-items-center">
                <div class="col-12 text-center">
                    <img src="~/Assets/images/download.png" alt="Đã thông báo Bộ Công Thương" class="footer-logo">
                </div>
            </div>
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("~/Assets/JS/layout.js?v=1.1")"></script>
    <script src="@Url.Content("~/Assets/JS/chatbot.js?v=1.1")"></script>
    <script src="@Url.Content("~/Assets/JS/Content.js?v=1.1")"></script>

    @RenderSection("~/Assets/Scripts", required: false)
    @RenderSection("Scripts", required: false)
    <div id="chatBotBox">
        <div class="chat-header">
            ChatBot MVC
            <button class="close-btn" onclick="toggleChat()">×</button>
        </div>
        <div class="chat-body" id="chatWindow"></div>
        <div class="chat-footer">
            <input type="text" id="userMessage" placeholder="Nhập tin nhắn..."
                   onkeydown="if(event.key==='Enter') sendMessage()" />
            <button onclick="sendMessage()">Gửi</button>
        </div>
    </div>
</body>
</html>
